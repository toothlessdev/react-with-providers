{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",

        "declaration": true,
        "declarationDir": "dist/types",

        "outDir": "dist",

        "strict": true,
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "es2015"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
